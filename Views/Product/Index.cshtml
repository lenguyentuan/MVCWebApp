@model List<App.Models.ProductModel>
@{
    ViewData["Title"] = "Product List";
    var products = Model as List<ProductModel>;
    var StatusMessage = TempData["StatusMessage"] as string;
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="StatusMessage" />
@if (Model.Count > 0)
{
    <ul>
        @foreach (var product in products)
        {
            <li><a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">@product.Name - @product.Price</a>
            </li>
        }
    </ul>
}