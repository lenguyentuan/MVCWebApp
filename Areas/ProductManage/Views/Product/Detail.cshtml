@{
    ViewData["Title"] = "View Detail Product";
}
@model App.Models.ProductModel

<h2>@ViewData["Title"]</h2>
<hr>

<div class="row">
    <div class="col-sm-6">
        <div class="alert alert-success card">
            <div class="card-header font-weight-bold text-center">
                <h2>@Model.Name</h2>
            </div>
            <div class="card-body">
                <div class="card-text text-mute">Price: @Model.Price</div>
            </div>
        </div>
    </div>
</div>

<a asp-controller="Product" asp-action="Index" class="btn btn-secondary">List Product</a>